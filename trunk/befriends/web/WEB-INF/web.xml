<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>TestDbServlet</servlet-name>
        <servlet-class>TestDbServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterToWebServlet</servlet-name>
        <servlet-class>servlet.RegisterToWebServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchByUsernameServlet</servlet-name>
        <servlet-class>servlet.SearchByUsernameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchByUsernameServlet</servlet-name>
        <url-pattern>/SearchByUsername</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestDbServlet</servlet-name>
        <url-pattern>/TestDbServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/register_to_web.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>AddFriendServlet</servlet-name>
        <servlet-class>servlet.AddFriendServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterToWebServlet</servlet-name>
        <url-pattern>/RegisterToWeb</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddFriendServlet</servlet-name>
        <url-pattern>/AddFriend</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
